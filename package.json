{
  "name": "learncode-ai",
  "displayName": "LearnCode AI",
  "description": "A VS Code extension that uses AI to guide you through coding decisions.",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.75.0"
  },
    "activationEvents": [
      "onCommand:episteme.understand",
      "onCommand:episteme.quiz",
      "onCommand:episteme.errors"
    ],
    "contributes": {
      "commands": [
        {
          "command": "episteme.understand",
          "title": "Understand with Episteme"
        },
        {
          "command": "episteme.quiz",
          "title": "Quiz with Episteme"
        },
        {
          "command": "episteme.errors",
          "title": "Debug with Episteme"
        }
      ],
      "menus": {
        "editor/context": [
          {
            "command": "episteme.understand",
            "when": "editorHasSelection",
            "group": "navigation"
          },
          {
            "command": "episteme.quiz",
            "when": "editorHasSelection",
            "group": "navigation"
          }
        ]
      }
    },
    "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "prettier_check": "prettier --check \"**/*.{js,ts,tsx,json,css,md}\"",
    "prettier_fix": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\""
  },
  "devDependencies": {
    "@types/diff": "^7.0.1",
    "@types/vscode": "^1.75.0",
    "prettier": "^3.5.1",
    "typescript": "^4.7.0"
  },
  "dependencies": {
    "diff": "^7.0.0"
  }
}
